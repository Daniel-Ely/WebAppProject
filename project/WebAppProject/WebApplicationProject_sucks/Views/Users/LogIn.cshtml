
@model WebApplicationProject_sucks.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Log_in.css?ver=<?php echo rand(111,999)?" type="text/css">
    <title>Log In</title>
</head>
<body>
    <h2>Log In</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="imgcontainer">
            <img src="~/src/Owl.png" alt="Avatar" class="avatar">
        </div>

        <div class="validations">

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
          
                @ViewBag.ErrorMessage

                    
        </div>
        <div class="container">

            @Html.TextBox("username", "", new { placeholder = "Enter user name", required = "required" })
        </div>


        <div class="container">
            @Html.TextBox("password", "", new { placeholder = "Enter password", required = "required" })
        </div>



        <input type="submit" value="Log In" class="btn btn-default" /><br />
        <button type="button" class="cancelbtn">Cancel</button>


    </div>
    }

</body>
</html>



