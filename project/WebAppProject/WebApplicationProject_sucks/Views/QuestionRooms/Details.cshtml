@model WebApplicationProject_sucks.Models.QuestionRoom

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
    <div>
        <h4>QuestionRoom</h4>
        <hr />
        <dl class="dl-horizontal">
            
                @Html.DisplayNameFor(model => model.Title)
      
                @Html.DisplayFor(model => model.Title)
           

            <dt>
                @Html.DisplayNameFor(model => model.Creator)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Creator)
            </dd>

        </dl>

        <!--Displaying all the comments in the room-->
        @foreach (var item in Model.Comments)
        {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1" id="logout">
                    <div class="tab-content">
                        <div class="tab-pane active" id="comments-logout">
                            <ul class="media-list">
                                <li class="media">
                                    <a class="pull-left" href="#">
                                        <img class="media-object img-circle" src="https://s3.amazonaws.com/uifaces/faces/twitter/dancounsell/128.jpg" alt="profile">
                                    </a>
                                    <div class="media-body">
                                        <div class="well well-lg">
                                            <h4 class="media-heading text-uppercase reviews"> @Html.DisplayFor(modelItem => item.UserName) </h4>
                                            <ul class="media-date text-uppercase reviews list-inline">
                                                <li class="dd">@Html.DisplayFor(modelItem => item.Date.Day)</li>
                                                <li class="mm">@Html.DisplayFor(modelItem => item.Date.DayOfWeek)</li>
                                                <li class="aaaa">@Html.DisplayFor(modelItem => item.Date.DayOfYear)</li>
                                            </ul>
                                            <p class="media-comment">
                                                @Html.DisplayFor(modelItem => item.Content)
                                            </p>

                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



                    }



                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.QuestionRoomID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
</body>
</html>
