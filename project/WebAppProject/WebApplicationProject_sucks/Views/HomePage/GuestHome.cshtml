@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" href="~/Content/Home.css?ver=<?php echo rand(111,999)?" type="text/css">
</head>
<body>
    <div class="row">
        <div class="side">
            
            <article>
                <canvas id="myCanvas" width="200" height="100" style="border:1px solid #5ff6f0;"></canvas>
                <script>
                    var ctx = document.getElementById("myCanvas").getContext("2d");
                    var img = new Image();
                    img.src = "/src/Owl.png";
                    ctx.drawImage(img, 4, 4);
                </script>
                <header>
                    <h2>About us...</h2>
                </header>
                <video width="320" height="240" controls>
                    <source src="/src/videoplayback.mp4" type="video/mp4">
                </video>
                <section>
                    <h4 >The Concept</h4>
                    <p>Soul Owl is a website which emphasizes the importance of mental health by providing its users the ability to ask questions in any topic. Our site consists of many professional users that  upload diverse content and advice the audience. Our professionals are carefully picked by the staff so you get the best reliable advices possible! </p>
                </section>

                <section>
                    <h4 >The Creators</h4>
                    <p>We are a team of 3 who manage and run this website. This project is based on our thriving passion to link between people and make advices accessible to everyone!</p>
                </section>
                <aside>
                    Hope you will enjoy using this website
                </aside>
                <footer>
                    <p>© 2020 SoulOwl</p>
                </footer>
                
            </article>
        </div>

        <div class="main">

            @{

                MyDB db = new MyDB();

                if (db.QuestionRooms.ToList().Count > 0)
                {
                    var listOfQR = db.QuestionRooms.OrderBy(d => d.DatePublished).ToList();
                    <ul>
                        @{ for (int i = 0; i < 10 && i < listOfQR.Count; i++)
                            {
                                <li class="post">
                                    <img src="~/src/QutionRoomOwl.png" alt="Avatar" class="avatar" align="left">
                                    <h2>@Html.Raw(listOfQR.ElementAt(i).Title)</h2>
                                    <h5>publish date , @listOfQR.ElementAt(i).DatePublished.Month.@listOfQR.ElementAt(i).DatePublished.Day.@listOfQR.ElementAt(i).DatePublished.Year</h5>
                                </li>
                            }
                        }
                    </ul>
                 }

                  if (db.Posts.ToList().Count > 0)
                   {
                     var listOfPS = db.Posts.OrderBy(d => d.Date).ThenBy(d => d.NumOfRating).ThenBy(d => d.Rating).ToList();
                    <ul>
                        @{ for (int i = 0; i < 10 && i < listOfPS.Count; i++)
                            {

                                <li class="post">
                                    <img src="~/src/QutionRoomOwl.png" alt="Avatar" class="avatar" align="left">
                                    <h2>@listOfPS.ElementAt(i).Title</h2>
                                    @{int pageid = listOfPS.ElementAt(i).ProfessionalPageID;
                                        <h4> @db.ProfessionalPages.Where(d => d.ProfessionalPageID == pageid).ToList().ElementAt(0).UserName</h4>}
                                        <h5>publish date , @listOfPS.ElementAt(i).Date.Month.@listOfPS.ElementAt(i).Date.Day.@listOfPS.ElementAt(i).Date.Year</h5>
                                        <h4>@listOfPS.ElementAt(i).Description</h4>
                                   </li>
                            }
                         }
                      </ul>

                  }
               }
         </div>
    </div>


</body>
</html>






