
@model WebApplicationProject_sucks.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <script>
        function Admin() {
            document.getElementById("IsAdmin").value = "true";
        }
        function User() {
            document.getElementById("IsAdmin").value = "false";
        }
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Log_in.css?ver=<?php echo rand(111,999)?" type="text/css">
    <title>Log In</title>
</head>
<body>
    <h2>AS WHO?</h2>

    @using (Html.BeginForm("Choise", "HomePage"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            <div class="imgcontainer">
                <img src="~/src/Owl.png" alt="Avatar" class="avatar">
            </div>

            <div class="validations">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @ViewBag.ErrorMessage


            </div>


            @Html.Hidden("IsAdmin")
            <input type="submit" value="As user" class="btn btn-default" onclick="User()" />
            <input type="submit" value="As admin" class="btn btn-default" onclick="Admin()"/>


        </div>
    }

</body>
</html>

